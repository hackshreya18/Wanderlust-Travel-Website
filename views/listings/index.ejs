<% layout("layouts/boilerplate") %>

<body>
  <h2>All Listings</h2><br>
    <!-- <form action="/listings/new" method="GET">
        <button>Create your own</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 " >
        <% for( let list of allList){ %>
          <a class="listing_link" href="/listings/<%= list._id %>">
            <div class="card col listing_card" >
              <img src="<%= list.image %>" class="card-img-top" alt="listing_image" style="height: 18rem;">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <p class="card-text"><b><%= list.title %></b><br>
                  &#8377; <%= list.price.toLocaleString("en-IN") %>/night
                </p>
              </div>
            </div> 
          </a>
        <% } %>
    </div>
</body>
