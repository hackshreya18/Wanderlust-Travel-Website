<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-3">
           <h4><%= list.title %></h4>
        </div>   
            <div class="listing_card card col-6 offset-3 show-card">
              <img alt="Location pic" src="<%= list.image %>" class="card-img-top show-img" alt="...">
              <div class="card-body">
                 <p class="card-text">
                    <%= list.description %> <br>
                    &#8377; <%= list.price.toLocaleString("en-IN") %> <br>
                    <%= list.location %> <br>
                    <%= list.country %>
                 </p>
              </div>
            </div>        
    </div>
    <div class="row offset-3 mb-4">
        <div class="btns mb-3">            
            <form action="/listings" method="GET">
                <button class="btn btn-dark show_btn ">Go back</button>
              </form>           
            <a href="/listings/<%= list._id %>/edit"><button class="btn btn-dark show_btn offset-4">Edit</button></a>            
            <form method="POST" action="/listings/<%= list._id %>?_method=DELETE" >
                <button class="btn btn-dark offset-5">Delete</button>
              </form><br> 
     </div> 
     <hr>
     <div class="row">
        <h5>Leave a Review</h5>
        <form class="needs-validation" novalidate action="/listings/<%= list._id %>/reviews" method="POST">

          <div class="col-4 mb-2 mt-2">
            <label class="form-label" for="username">Name:</label>
            <input class="form-control" type="text" id="username" name="review[username]" required>
            <div class="valid-feedback">
              Looks good!
             </div>
             <div class="invalid-feedback">
              Please enter your name.
             </div>
          </div>

          <div class="col-4 mb-3 mt-3">
            <label class="form-label" for="rating">Rating</label>
            <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
          </div>
          <div  class="col-7 mb-3 mt-3">
            <label  class="form-label " for="comment">Comment</label>
            <textarea class="form-control" name="review[comment]"
             id="comment"
             cols="30" rows="3" required ></textarea>
             <div class="valid-feedback">
              Looks good!
             </div>
             <div class="invalid-feedback">
              Please give a feedback.
             </div>
          </div>
          <br>
          <button class="btn btn-outline-dark">Submit</button>
          <br>
          <hr>
        </form>

        <p><b>All reviews</b></p>

        <div class="row">
          <% for(review of list.reviews){ %>
            <div class="mb-3 ms-3 col-5 card ">
              <div class="card-body mt-3">
                <!-- <h5 class="card-title"></h5> -->
                <p class="card-text mb-2">User:<b><%= review.username %></b></p>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text mb-2"><%= review.rating %>&#9733;</p>
              </div>
              <form action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="POST">
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            </div>
          <% } %>
        </div>        
     </div>
    </div>
</body>
